#상하체발달율 계산하기 (평균비율 이용해서)

        #어깨너비[0],가슴너비[1],허리너비[2],엉덩이너비[3]
        #가슴두께[4],허리두께[5],엉덩이두께[6],허벅지두께[7],종아리두께[8],
        #   키[9],   몸무게[10]
        
gst   = [300, 200, 200, 300, 
		 200, 100, 200, 100, 100,
		 1600, 50]

part = ["어깨너비", "가슴너비", "허리너비", "엉덩이너비",
        "가슴두께", "허리두께", "엉덩이두께", "허벅지두께", "종아리두께",
          "키",    "몸무게"]

w20   = [[358.35,      267.28,     251.89,      324.98,
          208.57,      174.15,     211.94,        174.43,       110.1,
         1609.15,       55.1],
          [15.31,       18.02,      23.56,       20.55
           23.88,       24.66,      21.05,         14.85,        8.37,
           52.17,        8.57]]


gender = input("성별을 입력하세요(남/여): ")
age = input("나이를 입력하세요(숫자만): ")
print("게스트님의 신체 사이즈 정보입니다.");

if(gender=="여") {
    if(age>=20 && age<=24) {
        for i in range(0, 11):
        	print(part[i] + gst[i]] + "mm");
        	if gst[i] >= w20[0][i]-w20[1][i] && gst[i] <= w20[0][i]+w20[1][i]:
            	print("평균 범위입니다.")
        	elif gst[i] < w20[0][i]-w20[1][i]: 
            	print("평균 범위 이하입니다.")
        	else:
            	print("평균 범위 이상입니다.")
            	
        






