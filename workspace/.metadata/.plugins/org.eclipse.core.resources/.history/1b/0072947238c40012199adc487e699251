<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Sample">

	<typeAlias alias="sampleVO" type="com.devBoardsample.vo.SampleVO"/>

	<resultMap id="sampleMap" class="sampleVO">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="description" column="description"/>
		<result property="useYn" column="use_yn"/>
		<result property="regUser" column="reg_user"/>
	</resultMap>

	<insert id="sampleDAO.insertSample" parameterClass="sampleVO">
		<selectKey resultClass="int" keyProperty="id">
		SELECT CASE WHEN MAX_ID IS NULL THEN 1 ELSE (MAX_ID + 1) END
		FROM   (SELECT MAX(TO_NUMBER(ID)) MAX_ID FROM SAMPLE)
		</selectKey>
		<![CDATA[
		INSERT INTO SAMPLE 
		( ID, NAME, DESCRIPTION, USE_YN, REG_USER, REG_DATE )
		VALUES
		( #id#, #name#, #description#, 'Y', #regUser#, SYSDATE )
		]]>
	</insert>
	
	<update id="sampleDAO.updateSample" parameterClass="sampleVO">
		<![CDATA[
		UPDATE SAMPLE 
		SET    NAME=#name#, DESCRIPTION=#description#
		WHERE  ID=#id#
		]]>
	</update>
	
	<delete id="sampleDAO.deleteSample" parameterClass="sampleVO">
		<![CDATA[
		DELETE FROM SAMPLE 
		WHERE  ID=#id#
		]]>
	</delete>
	
	<select id="sampleDAO.selectSample" parameterClass="sampleVO" resultMap="sampleMap">
		<![CDATA[
		SELECT ID, NAME, DESCRIPTION, USE_YN, REG_USER
		FROM   SAMPLE 
		WHERE  ID=#id#
		]]>
	</select>
	
	<select id="sampleDAO.selectSampleList" parameterClass="sampleVO" resultMap="sampleMap">
		SELECT * FROM ( SELECT ROWNUM RN, TB.* FROM (
			SELECT ID, NAME, DESCRIPTION, USE_YN, REG_USER
			FROM   SAMPLE
			<dynamic prepend="WHERE">
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					REG_USER = #searchKeyword#
				</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
					NAME LIKE '%' || #searchKeyword# || '%'
				</isEqual>
			</dynamic>
			<isNotEmpty property="startDate">
					AND		REG_DATE BETWEEN TO_DATE(#startDate# || '000000', 'YYYYMMDDHH24MISS') AND TO_DATE(#endDate# || '235959', 'YYYYMMDDHH24MISS') 
			</isNotEmpty>
			ORDER BY ID DESC
		) TB ) WHERE RN BETWEEN #firstIndex# + 1 AND #firstIndex# + #recordCountPerPage#
	</select>
	
	<select id="sampleDAO.selectSampleListCount" parameterClass="sampleVO" resultClass="java.lang.Integer">
		SELECT COUNT(*) CNT
		FROM   SAMPLE
		<dynamic prepend="WHERE">
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				ID = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				NAME LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</dynamic>
	</select>

</sqlMap>
