package kr.co.sinsul.payment.service.impl;

import java.util.List;

import javax.annotation.Resource;

import kr.co.sinsul.payment.dao.PaymentDAO;
import kr.co.sinsul.payment.service.PaymentService;
import kr.co.sinsul.payment.vo.MoneyDestVO;

import org.springframework.stereotype.Service;

import egovframework.rte.fdl.cmmn.AbstractServiceImpl;

/**
 * @Class Name : PaymentServiceImpl.java
 * @Description : 최종납부월을 처리하는 Impl Class
 * @Modification Information
 * @
 * @ 수정일      수정자     수정내용
 * @ ----------  ---------  -------------------------------
 * @ 2012. 12. 27.  Administrator     최초생성
 * 
 * @author Administrator
 * @since 2012. 12. 27.
 * @version 1.0
 * @see
 * 
 * Copyright (C) by Sinsuldong All right reserved.
 */
@Service("paymentService")
public class PaymentServiceImpl extends AbstractServiceImpl implements PaymentService {
	
	/** PaymentDAO */
	@Resource(name="paymentDAO")
	private PaymentDAO paymentDAO;
	
	/**
	 * 최종납부월 정보를 조회한다.
	 * @param vo - 최종납부월 정보가 담긴 VO
	 * @return 최종납부월목록
	 * @exception Exception
	 */
	public List<MoneyDestVO> retrievePaymentList(MoneyDestVO vo) throws Exception {
		return paymentDAO.selectPaymentList(vo);
	}
	
	/**
	 * 최종납부월 정보를 수정한다.
	 * @param vo - 최종납부일 정보가 담긴 VO
	 * @exception Exception
	 */
	public void updatePayment(MoneyDestVO vo) throws Exception {
		
		String [] userIdArr = vo.getUserId().split("[,]");
		String [] destMonthArr = vo.getDestMonth().split("[,]");
		
		for( int i = 0; i < userIdArr.length; i++) {
			MoneyDestVO moneyDestVO = new MoneyDestVO();
			moneyDestVO.setUserId(userIdArr[i]);
			moneyDestVO.setDestMonth(destMonthArr[i]);
			paymentDAO.updatePayment(moneyDestVO);
		}
		
	}
}
