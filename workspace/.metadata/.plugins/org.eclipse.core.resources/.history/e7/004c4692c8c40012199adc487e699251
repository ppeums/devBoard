CREATE TABLE DEVBOARD.TB_MENU
(
  MENU_ID        VARCHAR2(20 BYTE)              NOT NULL,
  PARENT_ID      VARCHAR2(20 BYTE),
  MENU_NAME_KOR  VARCHAR2(50 BYTE),
  MENU_NAME_ENG  VARCHAR2(50 BYTE),
