CREATE TABLE DEVBOARD.TB_USER
(
  USER_ID             VARCHAR2(20 BYTE)         NOT NULL,
  USER_TYPE           VARCHAR2(20 BYTE),
  USER_NAME           VARCHAR2(50 BYTE),
  USER_PWD            VARCHAR2(255 BYTE)
);

