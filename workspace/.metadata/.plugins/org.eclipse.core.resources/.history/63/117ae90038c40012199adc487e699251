package kr.co.sinsul.payment.service;

import java.util.List;

import kr.co.sinsul.payment.vo.MoneyDestVO;

/**
 * @Class Name : PaymentService.java
 * @Description : 최종납부월을 처리하는 Service Class
 * @Modification Information
 * @
 * @ 수정일      수정자     수정내용
 * @ ----------  ---------  -------------------------------
 * @ 2012. 12. 27.  Administrator     최초생성
 * 
 * @author Administrator
 * @since 2012. 12. 27.
 * @version 1.0
 * @see
 * 
 * Copyright (C) by Sinsuldong All right reserved.
 */
public interface PaymentService {
	/**
	 * 최종납부월 정보를 조회한다.
	 * @param vo - 최종납부월 정보가 담긴 VO
	 * @return 최종납부월목록
	 * @exception Exception
	 */
	public List<MoneyDestVO> retrievePaymentList(MoneyDestVO vo) throws Exception;
	
	/**
	 * 최종납부월 정보를 수정한다.
	 * @param vo - 최종납부일 정보가 담긴 VO
	 * @exception Exception
	 */
	public void updatePayment(MoneyDestVO vo) throws Exception;
}
