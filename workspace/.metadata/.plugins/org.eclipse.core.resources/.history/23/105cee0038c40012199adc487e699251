package kr.co.sinsul.payment.controller;

import java.util.List;

import javax.annotation.Resource;
import javax.servlet.http.HttpServletRequest;

import kr.co.sinsul.common.security.UserSession;
import kr.co.sinsul.payment.service.PaymentService;
import kr.co.sinsul.payment.vo.MoneyDestVO;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

/**
 * @Class Name : PaymentController.java
 * @Description : 최종납부월을 처리하는 Controller Class
 * @Modification Information
 * @
 * @ 수정일      수정자     수정내용
 * @ ----------  ---------  -------------------------------
 * @ 2012. 12. 27.  송제승     최초생성
 * 
 * @author 송제승
 * @since 2012. 12. 27.
 * @version 1.0
 * @see
 * 
 * Copyright (C) by Sinsuldong All right reserved.
 */
@Controller
public class PaymentController {
	
	/** PaymentService */
	@Resource(name = "paymentService")
	private PaymentService paymentService;
	
	/**
	 * 최종납부일조회 페이지를 조회한다. 
	 * @param moneyDestVO - 최종납부일 조건이 담긴 VO
	 * @param model
	 * @return View
	 * @exception Exception
	 */
	@RequestMapping(value="/payment/retrievePaymentList.do")
	public String retrievePaymentList(@ModelAttribute("moneyDestVO") MoneyDestVO moneyDestVO, ModelMap model, HttpServletRequest request) throws Exception {

		List<MoneyDestVO> resultList = paymentService.retrievePaymentList(moneyDestVO);
		model.addAttribute("resultList", resultList);

		model.addAttribute("userId", UserSession.getUserId(request));
		
		return "/payment/paymentList";
	}
	
	/**
	 * 최종납부일조회 페이지를 수정한다. 
	 * @param moneyDestVO - 최종납부일 조건이 담긴 VO
	 * @param model
	 * @return View
	 * @exception Exception
	 */
	@RequestMapping(value="/payment/paymentProc.do")
	public String paymentProc(@ModelAttribute("moneyDestVO") MoneyDestVO moneyDestVO, ModelMap model, HttpServletRequest request) throws Exception {
		paymentService.updatePayment(moneyDestVO);
		
		return "forward:/payment/retrievePaymentList.do";
	}
	
}
