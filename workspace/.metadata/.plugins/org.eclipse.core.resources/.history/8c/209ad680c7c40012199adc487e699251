DROP TABLE IF EXISTS  SAMPLE ;

CREATE TABLE SAMPLE (
  ID varchar(16) NOT NULL,
  NAME varchar(50) DEFAULT NULL,
  DESCRIPTION varchar(100) DEFAULT NULL,
  USE_YN char(1) DEFAULT NULL,
  REG_USER varchar(10) DEFAULT NULL,
  PRIMARY KEY (ID)
);

DROP TABLE IF EXISTS  IDS ;

CREATE TABLE IDS (
  TABLE_NAME VARCHAR(16) NOT NULL,
  NEXT_ID DECIMAL(30) NOT NULL,
  PRIMARY KEY (TABLE_NAME) 
);

INSERT INTO IDS VALUES('SAMPLE',0);

-----------------------------------------------------------------------------

CREATE TABLE LW_AUTHOR
(
	USER_ID               VARCHAR2(20)  NOT NULL ,
	MENU_ID               VARCHAR2(20)  NOT NULL ,
	REG_DATE              DATE  NULL ,
	REG_ID                VARCHAR2(20)  NULL ,
	UPD_DATE              DATE  NULL ,
	UPD_ID                VARCHAR2(20)  NULL ,
	DEL_DATE              DATE  NULL ,
	DEL_ID                VARCHAR2(20)  NULL ,
	DEL_YN                VARCHAR2(1)  NULL 
);

COMMENT ON TABLE LW_AUTHOR IS '권한정보';
COMMENT ON COLUMN LW_AUTHOR.USER_ID IS '사용자ID';
COMMENT ON COLUMN LW_AUTHOR.MENU_ID IS '메뉴ID';
COMMENT ON COLUMN LW_AUTHOR.REG_DATE IS '등록일자';
COMMENT ON COLUMN LW_AUTHOR.REG_ID IS '등록자';
COMMENT ON COLUMN LW_AUTHOR.UPD_DATE IS '수정일자';
COMMENT ON COLUMN LW_AUTHOR.UPD_ID IS '수정자';
COMMENT ON COLUMN LW_AUTHOR.DEL_DATE IS '삭제일자';
COMMENT ON COLUMN LW_AUTHOR.DEL_ID IS '삭제자';
COMMENT ON COLUMN LW_AUTHOR.DEL_YN IS '삭제여부';


CREATE UNIQUE INDEX LW_AUTHOR_PK ON LW_AUTHOR
(USER_ID  ASC,MENU_ID  ASC);



ALTER TABLE LW_AUTHOR
	ADD CONSTRAINT  LW_AUTHOR_PK PRIMARY KEY (USER_ID,MENU_ID);



CREATE TABLE LW_MENU
(
	MENU_ID               VARCHAR2(20)  NOT NULL ,
	PARENT_ID             VARCHAR2(20)  NULL ,
	MENU_NAME_KOR         VARCHAR2(50)  NULL ,
	MENU_NAME_ENG         VARCHAR2(50)  NULL ,
	MENU_ORDER            VARCHAR2(20)  NULL ,
	MENU_URL			  VARCHAR2(100)  NULL ,
	REG_DATE              DATE  NULL ,
	REG_ID                VARCHAR2(20)  NULL ,
	UPD_DATE              DATE  NULL ,
	UPD_ID                VARCHAR2(20)  NULL ,
	DEL_DATE              DATE  NULL ,
	DEL_ID                VARCHAR2(20)  NULL ,
	DEL_YN                VARCHAR2(1)  NULL 
);

COMMENT ON TABLE LW_MENU IS '메뉴정보';
COMMENT ON COLUMN LW_MENU.MENU_ID IS '메뉴ID';
COMMENT ON COLUMN LW_MENU.PARENT_ID IS '상위메뉴ID';
COMMENT ON COLUMN LW_MENU.MENU_NAME_KOR IS '메뉴명_한글';
COMMENT ON COLUMN LW_MENU.MENU_NAME_ENG IS '메뉴명_영어';
COMMENT ON COLUMN LW_MENU.MENU_ORDER IS '정렬순서';
COMMENT ON COLUMN LW_MENU.MENU_URL IS '메뉴경로';
COMMENT ON COLUMN LW_MENU.REG_DATE IS '등록일자';
COMMENT ON COLUMN LW_MENU.REG_ID IS '등록자';
COMMENT ON COLUMN LW_MENU.UPD_DATE IS '수정일자';
COMMENT ON COLUMN LW_MENU.UPD_ID IS '수정자';
COMMENT ON COLUMN LW_MENU.DEL_DATE IS '삭제일자';
COMMENT ON COLUMN LW_MENU.DEL_ID IS '삭제자';
COMMENT ON COLUMN LW_MENU.DEL_YN IS '삭제여부';


CREATE UNIQUE INDEX LW_MENU_PK ON LW_MENU
(MENU_ID  ASC);



ALTER TABLE LW_MENU
	ADD CONSTRAINT  LW_MENU_PK PRIMARY KEY (MENU_ID);



CREATE TABLE LW_SERVER
(
	USER_ID               VARCHAR2(20)  NOT NULL ,
	SERVER_IP             VARCHAR2(20)  NULL ,
	REG_DATE              DATE  NULL ,
	REG_ID                VARCHAR2(20)  NULL ,
	UPD_DATE              DATE  NULL ,
	UPD_ID                VARCHAR2(20)  NULL ,
	DEL_DATE              DATE  NULL ,
	DEL_ID                VARCHAR2(20)  NULL ,
	DEL_YN                VARCHAR2(1)  NULL 
);

COMMENT ON TABLE LW_SERVER IS '서버정보';
COMMENT ON COLUMN LW_SERVER.USER_ID IS '사용자ID';
COMMENT ON COLUMN LW_SERVER.SERVER_IP IS '서버IP';
COMMENT ON COLUMN LW_SERVER.REG_DATE IS '등록일자';
COMMENT ON COLUMN LW_SERVER.REG_ID IS '등록자';
COMMENT ON COLUMN LW_SERVER.UPD_DATE IS '수정일자';
COMMENT ON COLUMN LW_SERVER.UPD_ID IS '수정자';
COMMENT ON COLUMN LW_SERVER.DEL_DATE IS '삭제일자';
COMMENT ON COLUMN LW_SERVER.DEL_ID IS '삭제자';
COMMENT ON COLUMN LW_SERVER.DEL_YN IS '삭제여부';

CREATE UNIQUE INDEX LW_SERVER_PK ON LW_SERVER
(USER_ID  ASC);



ALTER TABLE LW_SERVER
	ADD CONSTRAINT  LW_SERVER_PK PRIMARY KEY (USER_ID);



CREATE TABLE LW_USER
(
	USER_ID               VARCHAR2(20)  NOT NULL ,
	USER_PWD              VARCHAR2(20)  NULL ,
	USER_TYPE             VARCHAR2(20)  NULL ,
	LICENSE_NO            VARCHAR2(20)  NULL ,
	SITE_URL              VARCHAR2(200)  NULL ,
	CHIEF_NAME            VARCHAR2(20)  NULL ,
	CHARGE_NAME           VARCHAR2(20)  NULL ,
	TEL_NO                VARCHAR2(20)  NULL ,
	EMAIL                 VARCHAR2(50)  NULL ,
	BANK_CODE             VARCHAR2(20)  NULL ,
	DEPOSITOR             VARCHAR2(20)  NULL ,
	ACCOUNT_NO            VARCHAR2(20)  NULL ,
	FTP_PATH              VARCHAR2(200)  NULL ,
	FTP_IP                VARCHAR2(20)  NULL ,
	FTP_PORT              VARCHAR2(20)  NULL ,
	FTP_ID                VARCHAR2(20)  NULL ,
	FTP_PWD               VARCHAR2(20)  NULL ,
	FTP_MODE              VARCHAR2(20)  NULL ,
	REG_DATE              DATE  NULL ,
	REG_ID                VARCHAR2(20)  NULL ,
	UPD_DATE              DATE  NULL ,
	UPD_ID                VARCHAR2(20)  NULL ,
	DEL_DATE              DATE  NULL ,
	DEL_ID                VARCHAR2(20)  NULL ,
	DEL_YN                VARCHAR2(1)  NULL 
);

COMMENT ON TABLE LW_USER IS '사용자정보';
COMMENT ON COLUMN LW_USER.USER_ID IS '사용자ID';
COMMENT ON COLUMN LW_USER.USER_PWD IS '사용자비밀번호';
COMMENT ON COLUMN LW_USER.USER_TYPE IS '사용자구분';
COMMENT ON COLUMN LW_USER.LICENSE_NO IS '사업자등록번호';
COMMENT ON COLUMN LW_USER.SITE_URL IS '홈페이지';
COMMENT ON COLUMN LW_USER.CHIEF_NAME IS '대표자명';
COMMENT ON COLUMN LW_USER.CHARGE_NAME IS '담당자명';
COMMENT ON COLUMN LW_USER.TEL_NO IS '전화번호';
COMMENT ON COLUMN LW_USER.EMAIL IS '이메일';
COMMENT ON COLUMN LW_USER.BANK_CODE IS '결재은행';
COMMENT ON COLUMN LW_USER.DEPOSITOR IS '예금주';
COMMENT ON COLUMN LW_USER.ACCOUNT_NO IS '계좌번호';
COMMENT ON COLUMN LW_USER.FTP_PATH IS 'FTP경로';
COMMENT ON COLUMN LW_USER.FTP_IP IS 'FTP아이피';
COMMENT ON COLUMN LW_USER.FTP_PORT IS 'FTP포트';
COMMENT ON COLUMN LW_USER.FTP_ID IS 'FTP아이디';
COMMENT ON COLUMN LW_USER.FTP_PWD IS 'FTP비밀번호';
COMMENT ON COLUMN LW_USER.FTP_MODE IS 'FTP모드';
COMMENT ON COLUMN LW_USER.REG_DATE IS '등록일자';
COMMENT ON COLUMN LW_USER.REG_ID IS '등록자';
COMMENT ON COLUMN LW_USER.UPD_DATE IS '수정일자';
COMMENT ON COLUMN LW_USER.UPD_ID IS '수정자';
COMMENT ON COLUMN LW_USER.DEL_DATE IS '삭제일자';
COMMENT ON COLUMN LW_USER.DEL_ID IS '삭제자';
COMMENT ON COLUMN LW_USER.DEL_YN IS '삭제여부';

CREATE UNIQUE INDEX LW_USER_PK ON LW_USER
(USER_ID  ASC);



ALTER TABLE LW_USER
	ADD CONSTRAINT  LW_USER_PK PRIMARY KEY (USER_ID);



ALTER TABLE LW_AUTHOR
	ADD (CONSTRAINT  R_8 FOREIGN KEY (USER_ID) REFERENCES LW_USER(USER_ID));



ALTER TABLE LW_AUTHOR
	ADD (CONSTRAINT  R_10 FOREIGN KEY (MENU_ID) REFERENCES LW_MENU(MENU_ID));



ALTER TABLE LW_MENU
	ADD (CONSTRAINT  R_13 FOREIGN KEY (MENU_ID) REFERENCES LW_MENU(MENU_ID) ON DELETE SET NULL);



ALTER TABLE LW_SERVER
	ADD (CONSTRAINT  R_7 FOREIGN KEY (USER_ID) REFERENCES LW_USER(USER_ID));
	
