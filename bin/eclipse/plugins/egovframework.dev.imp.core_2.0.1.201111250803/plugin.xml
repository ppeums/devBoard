<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="egovframework.dev.imp.ide.commands.category"
            name="eGovFrame">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="egovframework.dev.imp.ide.menu"
               label="eGovFrame"
               mnemonic="G">
            <menu
                  id="egovframework.dev.imp.core.menu.start"
                  label="Start"
                  mnemonic="S">
            </menu>
            <menu
                  id="egovframework.dev.imp.core.menu.analysis"
                  label="Analysis"
                  mnemonic="A">
            </menu>
            <menu
                  id="egovframework.dev.imp.core.menu.design"
                  label="Design"
                  mnemonic="D">
            </menu>
            <menu
                  id="egovframework.dev.imp.core.menu.implementation"
                  label="Implementation"
                  mnemonic="I">
            </menu>
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="egovframework.dev.imp.ide.definition.actionSet">
               </reference>
            </visibleWhen>
            <menu
                  id="egovframework.dev.imp.ide.menu.configuration"
                  label="Configuration"
                  mnemonic="C">
            </menu>
         </menu>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="egovframework.dev.imp.core.perspectives.EgovPerspectiveFactory"
            fixed="false"
            icon="icons/perspective.png"
            id="egovframework.dev.imp.core.perspectives.egovperspective"
            name="eGovFrame">
      </perspective>
   </extension>
   
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="egovframework.dev.imp.ide.actionSet"
            label="eGovFrame"
            visible="false">
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="egovframework.dev.imp.ide.definition.actionSet">
         <with
               variable="activeContexts">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <equals
                     value="egovframework.dev.imp.ide.actionSet">
               </equals>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="egovframework.dev.imp.ui.views"
            name="eGovFrame">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="egovframework.dev.imp.core.properties.EmptyConfPropertyPage"
            id="egovframework.dev.imp.confmngt.propertypages.emptyconfpropertypage"
            name="eGovFrame">
           <enabledWhen>
           	<or>
		     <adapt type="org.eclipse.core.resources.IProject">
		          <test property="org.eclipse.core.resources.projectNature" value="egovframework.dev.imp.ide.natures.egovnature"/>
		     </adapt>         
 		     <adapt type="org.eclipse.core.resources.IProject">
		          <test property="org.eclipse.core.resources.projectNature" value="egovframework.mdev.imp.ide.natures.egovnature"/>
		     </adapt>         
	        </or>
           </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="egovframework.dev.imp.core.wizards"
            name="eGovFrame">
      </category>
   </extension>
</plugin>
